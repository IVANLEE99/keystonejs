extends ../layouts/default

block content
	.container
		| 我的博客 详情
		| #{JSON.stringify(blog)}
		hr
		div.row
			if blog
				.col-xs-12
					div
						if blog.title
							h1=blog.title
					div
						if blog.content
							div
								| !{blog.content.brief}
							div
								| !{blog.content.extended}
						if blog.author
								div
									| 作者：!{blog.author.name.first + ' '+blog.author.name.last}

